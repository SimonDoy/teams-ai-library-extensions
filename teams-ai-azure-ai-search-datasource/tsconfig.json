{
    "compilerOptions": {
      "target": "ESNext",
      "forceConsistentCasingInFileNames": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "jsx": "react",
      "declaration": true,
      "sourceMap": true,
      "strict": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "rootDir": "./src",
      "outDir": "./lib",
      "typeRoots": [
        "./node_modules/@types",
        "./node_modules/@microsoft"
      ],
      "types": [
      ],
      "lib": ["ESNext", "DOM"],
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules",
      "lib",
      "webpack.config.js",
    ]
}

